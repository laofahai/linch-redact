{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Linch Redact",
  "version": "0.1.7",
  "identifier": "tech.linch.redact",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1501",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Linch Redact",
        "width": 1440,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 700,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "maximized": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": ["libs/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlDQzUwOUZEMDUyMDc4QkYKUldTL2VDQUYvUW5GblB3VnZocEpTckVHNUxpTXd6SHRmTE03MXNwQU42M0NMcHJDZWV1N3c1WHAK",
      "endpoints": [
        "https://linch-pc-base.oss-cn-beijing.aliyuncs.com/releases/linch-redact/latest.json",
        "https://github.com/laofahai/linch-redact/releases/latest/download/latest.json"
      ]
    }
  }
}
